generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String     @id @default(uuid())
  email            String
  name             String
  password         String
  avatar           Avatar?
  followed_by      User[]     @relation("UserFollows")
  following        User[]     @relation("UserFollows")
  message_sended   Message[]  @relation("MessageSended")
  message_received Message[]  @relation("MessageReceived")
  posts            UserPost[]

  last_sign_in DateTime?
}

model UserPost {
  id         Int         @id @default(autoincrement())
  user_id    String
  user       User        @relation(fields: [user_id], references: [id])
  content    String
  created_at DateTime    @default(now())
  images     ImagePost[]
}

model ImagePost {
  id        Int      @default(autoincrement())
  post      UserPost @relation(fields: [post_id], references: [id])
  post_id   Int
  public_id String
  url       String

  @@id([id, post_id])
}

model Avatar {
  user      User   @relation(fields: [user_id], references: [id])
  user_id   String @unique
  public_id String
  url       String

  @@id([user_id, public_id])
}

model Message {
  id          String   @id @default(uuid())
  sender_id   String
  sender      User     @relation(fields: [sender_id], references: [id], name: "MessageSended")
  receiver_id String
  receiver    User     @relation(fields: [receiver_id], references: [id], name: "MessageReceived")
  body        String
  createdAt   DateTime @default(now())

  @@index([sender_id, receiver_id])
}
